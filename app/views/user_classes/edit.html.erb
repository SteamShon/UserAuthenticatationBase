<% provide(:title, "edit class") %>

<div id="container">
	<div class="tabbable"> 
	  <ul class="nav nav-tabs">
	    <li class="active"><a href="#tab1" data-toggle="tab">Students</a></li>
	    <li><a href="#tab2" data-toggle="tab">Behaviors</a></li>
	    <li><a href="#tab3" data-toggle="tab">Rewards</a></li>
	  </ul>
	  <div class="tab-content">
	    <div class="tab-pane active" id="tab1">
	      <p>
	      	<%= link_to "Add students", "#studentModal", 
	      	{ class: "btn btn-large btn-primary", "data-toggle" => "modal"} %>
	      </p>
	      <p>
	      	<%= render partial: "students/modal", locals: { user_class: @user_class } %>
	      </p>
	      <div class="row">
			<ul class="students">
				<%= render partial: "students/list", locals: { user_class: @user_class, students: @students } %>
			</ul>	      
		  </div>
		</div>
	    
	    <div class="tab-pane" id="tab2">
	    	<div class="row-fluid" id="behaviors" align="center">
	    		<div class="span12">
	    			<div class="row-fluid">
	    				<div class="span6" id="good-behaviors">
	    					<h3>Good Behaviors</h3>
			    			<%= render partial: "behavior", collection: UserClass.behaviors(@user_class.id, 1) %>
			    		</div>
			    		<div class="span6" id="bad-behaviors">
			    			<h3>Bad Behaviors</h3>
			    			<%= render partial: "behavior", collection: UserClass.behaviors(@user_class.id, -1) %>
			    		</div>
	    			</div>
	    		</div>
	    	</div>
	    	<div class="row-fluid" align="center">
	    		<div class="span12" id="new-behaviors">
	    			<h3>New Behaviors</h3>
	    			<%= render partial: "new_behavior" %>
	    		</div>
			</div>
	    </div>

	    <div class="tab-pane" id="tab3">
	    	rewards
	    </div>
	  </div>
	</div>
</div>
